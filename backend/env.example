# Configuração do MongoDB
MONGO_URI=mongodb://localhost:27017/moonlightlogger

# Configuração do Redis
REDIS_URL=redis://localhost:6379

# Porta do servidor
PORT=4000

# Token para autenticação de ingestão de logs
# Deixe vazio para permitir acesso sem autenticação
INGEST_TOKEN=your-secure-token-here

# Provider de IA (opcional)
# Valores: heuristic, openai, ollama
AI_PROVIDER=heuristic

# Configurações de OpenAI (se usar)
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-3.5-turbo

# Configurações de Ollama (se usar)
# OLLAMA_URL=http://localhost:11434
# OLLAMA_MODEL=llama2
