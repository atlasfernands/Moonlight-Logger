{
  "name": "moonlight-logger-backend",
  "version": "1.0.0",
  "description": "Backend inteligente para o Moonlight Logger com análise de IA e alertas automáticos",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:stress": "node test/stress-test.js",
    "test:features": "node demo-advanced-features.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "type-check:test": "tsc --noEmit -p tsconfig.test.json",
    "demo": "node demo-advanced-features.js",
    "simulate-errors": "node simulate-errors.js"
  },
  "keywords": [
    "logging",
    "ai-analysis",
    "alerts",
    "clustering",
    "trends",
    "sentiment",
    "integrations"
  ],
  "author": "Moonlight Logger Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "mongoose": "^7.5.0",
    "redis": "^4.6.7",
    "bullmq": "^4.8.0",
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.7.0",
    "prometheus-client": "^0.5.1",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "rate-limiter-flexible": "^2.4.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "nodemailer": "^6.9.4",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/nodemailer": "^6.4.9",
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.1.6",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
